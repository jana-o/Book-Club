
<div class="card-group club-card">
    <div class="card">
        <img class="card-img-top mx-auto" src="{{this.icon}}" alt="Card image cap">
        <div class="card-body">
            <a href="club/{{this._id}}">
                <h5 class="card-title">{{this.clubname}}</h5>
            </a>
            <p class="card-title">
                <strong>Current book: </strong>
                {{#each this.books}} {{#if @last}} {{this.books.title}}</p>
            <p class="card-title">
                <strong>Author: </strong>{{this.books.author}}</p>
            {{/if}} 
            {{/each}}
        </div>
    </div>
</div>
